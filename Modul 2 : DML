#IMPLEMENTASI
Membuat Basis Data Siakad
--> create database siakad;
Membuat Tabel Dosen
--> create table dosen (
    id_dosen varchar(10) primary key,
    nama_dosen varchar(100) not null,
    email varchar(100) unique
    );
Membuat Tabel Mata Kuliah
--> create table mata_kuliah (
    kode_matkul char(10) primary key,
    nama_matkul varchar(50) not null,
    sks int not null
    );
Membuat Tabel Distribusi Mata Kuliah
--> create table distribusi_matkul (
    id_dosen char(5),
    kode_matkul char(10),
    primary key (id_dosen, kode_matkul),
    foreign key (id_dosen) references dosen(id_dosen),
    foreign key (kode_matkul) references mata_kuliah(kode_matkul)
    );
Insert Dosen
--> insert into dosen(id_dosen, nama_dosen, email) values
    ('D001', 'Nuri', 'nuri@gmail.com'),
    ('D002', 'Mina', 'mina@gmail.com'),
    ('D003', 'Caca', 'caca@gmail.com'),
    ('D004', 'Susan', 'susan@gmail.com'),
